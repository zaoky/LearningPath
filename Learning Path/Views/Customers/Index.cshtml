@using Learning_Path.Models
@model List<Customer>
@{
    ViewBag.Title = "Customer";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Customer</h2>

<table class="table table=bordered table-hover">
    <thead>
        <tr>
            <th>Customer</th>
            <th>Discount Rate</th>
        </tr>
    </thead>
    @foreach (Customer cust in Model)
    {
        <tr>
            <td>
                @Html.ActionLink(cust.Name, "Details", "Customers", new {id = cust.Id}, null)
            </td>
            <td>@cust.MembershipType.DiscountRate%</td>
        </tr>
    }
</table>